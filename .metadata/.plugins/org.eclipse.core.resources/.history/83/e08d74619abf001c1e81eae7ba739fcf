<%@ page language="java" import="java.sql.ResultSet" import="java.sql.Statement" import="java.sql.Connection" import="java.sql.DriverManager" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title></title>
</head>
<body>
<% 
	String email = request.getParameter("email");
	String password = request.getParameter("password");
	Class.forName("com.mysql.jdbc.Driver");
	Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/end_term_practical","root","");
	Statement st = con.createStatement();
	ResultSet rs;
	rs = st.executeQuery("select * from user_details where email='"+ email +"' and password='"+ password +"'");
	if(rs.next())
	{
		session.setAttribute("email", email);
		response.sendRedirect("success.jsp");
	}
	else
	{
		out.println( "Invalid password ! <a href='index.jsp'>Try Again.</a>" );
	}
%>
</body>
</html>